<div class="edit">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <br>
    <br>
    <%= f.label :completed %>
    <%= f.text_field :completed %>
    <br>
    <br>
    <%= f.submit %>
  <% end %>
</div>
