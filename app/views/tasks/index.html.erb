<div class="container">
  <div class="title">
  <h1>My Tasks to Do</h1>
  </div>

  <div class="tasks">
    <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.title, task_path(task) %></li>
      <% end %>
    </ul>
  </div>

  <div class="link">
  <%= link_to "Add a New Task to your List !", tasks_new_path %>
   </div>
</div>